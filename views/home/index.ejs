<%- include('../layout/header') -%>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/responsive_web.css">
<body>
<%- include('../layout/upload') -%>    
<%- include('../layout/editor') -%>    
<div class="container">
    <div class="row">
        <%- include('../layout/navbar') -%>
        <div class="mainSectionContainer col-lg-6 col-10 p-0">
            <div class="titleContainer fixed-top">
                <h1><%= title %> </h1>
            </div>
            <%- include('./postform') -%>
            <%- include('../layout/post') -%>
        </div>
        <div class="col-lg-4 third-col">
            <%- include('../layout/search') -%>
            <div class="followContainer px-3 mt-3">
                <div class="followFormContainer">
                    <div id="followTitle">
                        <h1>Who to follow</h1>
                    </div>
                    <ul id="followList">
                        <% for(let user of users) {%>
                            <% const displayName = user.firstName + " " + user.lastName; %>
                            <li class="followUser">
                                <div class="followUserContainer">
                                    <div class='followUserImage'>
                                        <a href="<%= `/user-profile/${user.username}` %> ">
                                        <img  
                                        data-avatar="<%= 'img' + user._id + 'png' %>"
                                        class="rounded-circle"
                                        alt="avatar"
                                        width="45"
                                        height="45"
                                        src="<%= getAvatar(user.avatar) %>"
                                        title="<%= user.username %>"
                                        />
                                    </a>
                                    </div>
                                    <div class="followContent">
                                        <a href="<%= `/user-profile/${user.username}`%>"><%= displayName %> </a>
                                        <span class='username'>@<%= user.username %></span>
                                    </div>
                                </div>
                                    <button data-follow-username=<%= user.username %>  type="submit" class="btn btn-primary followButton" title="Follow">
                                        Follow
                                      </button>                               
                            </li>
                            <% } %>  
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../layout/footer') -%>
<script src="/js/helper.js"></script>
<script src="/js/common.js"></script>
<script src="/js/editor.js"></script>
<script src="/js/search.js"></script>
<script src="/js/video.js"></script>
</body>
</html>