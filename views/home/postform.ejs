<div id="postFormContainer" class="py-3 px-2 mb-2">
  <image
    class="rounded-circle"
    src="<%= avatar %> "
    alt="profile picture"
    width="50"
    height="50"
  ></image>
  <form class="mx-1">
    <div class="mb-1">
      <textarea
        id="postTextarea"
        class="form-control"
        placeholder="What's happening?"
        shadow-none
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary" id="postButton" disabled>
      Tweet
    </button>
  </form>
</div>
